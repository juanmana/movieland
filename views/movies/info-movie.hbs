<div id="hamb">
  <a href="/">
    <img class="logoImageSmall" src="/images/logo.png" alt="logo" />
  </a>
  <div class="elementsRight">
    <a href="/movies/profile"><img src="/images/descarga.jpeg" id="avatarSmall" alt="avatar" /></a>
    <button class="btn-logout-profile">
      <a href="/">Logout</a>

    </button>
  </div>
</div>
<div id="container0">


  <div id="profileCont" class="info-movie">
    <div id="profileHeader">
      <img src="/images/descarga.jpeg" id="avatar" alt="avatar" />

      <h3 class="userName">{{data.user.username}}</h3>
    </div>
    <div class="btnContainer">
      <button class="btnWant left">
        <a href="/movies/want">Want</a>
      </button>
      <button class="btnWatched">
        <a href="/movies/watched">Watched</a>
      </button>
    </div>


    <div id="contInfoMovie">


      <div class="picContInfoMovie">
        <img src={{data.movie.Poster}} id="pic-info-movie" />
      </div>
      <div id="container-info-movie">
        <div id="upMovie">
          <h3> {{data.movie.Title}}</h3>
          <p class="dataYearInfo bold">{{data.movie.Year}}
            <span class="cyan"> {{data.movie.Released}}</span></p>
        </div>
        <div class="btnBigInfo">
          {{#if data.isWanted}}
          <p class="added">Added</p>
          {{else}}
          <button id="want">Want
            <i id="tick" style="visibility: hidden">
              <img class="icon" src="/images/icons.svg" alt="icon" />
            </i>
          </button>

          {{/if}}

            
          <button id="watched"><span class="">Watched</span>
            <i id="tick1" style="visibility: hidden">
              <img class="icon" src="/images/icons.svg" alt="icon" />
            </i>
          </button>


        </div>

        <div id="information">
          <p><span class="bold">Runtime: </span>{{data.movie.Runtime}}</p>
          <p><span class="bold">Genre:</span> {{data.movie.Genre}}</p>
          <p><span class="bold">Director:</span> {{data.movie.Director}}</p>
          <p><span class="bold">Actors:</span> {{data.movie.Actors}}</p>
          <p><span class="bold">Plot: </span>{{data.movie.Plot}}</span>
          <p><span class="bold">Language:</span> {{data.movie.Language}}</p>
          <p><span class="bold">Country:</span> {{data.movie.Country}}</p>
          <p><span class="bold">imdbRating:</span> {{data.movie.imdbRating}}</p>
          <p><span class="bold">imdbID:</span> {{data.movie.imdbID}}</p>
          <p><span class="bold">Website:<a href = "{{data.movie.Website}}">{{data.movie.Website}}</a></p></span>
        </div>

        <script>
          document.querySelector('#want').onclick = function (event) {
            event.preventDefault()
            axios
              .post(`/movies/want/{{data.movie.imdbID}}`)
              .then(response => {
                if (response.data.movieAssociated) {
                  document.querySelector("#tick").style.visibility = "visible";
                }
              })

          }

          document.querySelector('#watched').onclick = function (event) {
            event.preventDefault()
            axios
              .post("/movies/watched/{{data.movie.imdbID}}")
              .then(response => {
                if (response.data.movieAssociated) {
                  document.querySelector("#tick1").style.visibility = "visible";
                }
              })

          }


        </script>
      </div>
    </div>
  </div>
</div>